    <canvas id="birthdayCanvas"></canvas>

    <script>
        const canvas = document.getElementById('birthdayCanvas');
        const ctx = canvas.getContext('2d');
        const messageDiv = document.getElementById('message');
        const questionBox = document.getElementById('question-box');
        const noBtn = document.getElementById('no-btn');
        const yesBtn = document.getElementById('yes-btn');
        const successModal = document.getElementById('success-modal');
        const closeModal = document.getElementById('close-modal');

        canvas.width = window.innerWidth;
        canvas.height = window.innerHeight;

        let layers = [
            { y: -300, targetY: canvas.height * 0.85, w: 320, h: 80, color: '#ff4d94', accent: '#ff007f', landed: false, delay: 0 },
            { y: -600, targetY: canvas.height * 0.85 - 80, w: 240, h: 70, color: '#ffffff', accent: '#ffe6f2', landed: false, delay: 50 },
            { y: -900, targetY: canvas.height * 0.85 - 150, w: 160, h: 60, color: '#ff4d94', accent: '#ff007f', landed: false, delay: 100 }
        ];

        let candleOpacity = 0;
        let particles = [];
        let stars = [];
        let uiRevealed = false;

        function initStars() {
            for(let i=0; i<150; i++) {
                stars.push({
                    x: Math.random() * canvas.width,
                    y: Math.random() * canvas.height,
                    size: Math.random() * 2,
                    opacity: Math.random(),
                    speed: Math.random() * 0.02
                });
            }
        }

        class Confetti {
            constructor() {
                this.x = Math.random() * canvas.width;
                this.y = Math.random() * canvas.height - canvas.height;
                this.size = Math.random() * 10 + 5;
                this.speed = Math.random() * 4 + 2;
                this.color = `hsl(${Math.random() * 360}, 100%, 70%)`;
                this.angle = Math.random() * 360;
                this.rotationSpeed = Math.random() * 5;
            }
            update() {
                this.y += this.speed;
                this.angle += this.rotationSpeed;
                if (this.y > canvas.height) this.y = -20;
            }
            draw() {
                ctx.save();
                ctx.translate(this.x, this.y);
                ctx.rotate(this.angle * Math.PI / 180);
                ctx.fillStyle = this.color;
                ctx.shadowBlur = 10;
                ctx.shadowColor = this.color;
                ctx.fillRect(-this.size/2, -this.size/2, this.size, this.size);
                ctx.restore();
            }
        }

        function drawCakeLayer(layer) {
            ctx.save();
            const x = canvas.width / 2 - layer.w / 2;
            let bounce = layer.landed ? Math.sin(Date.now() / 200) * 4 : 0;
            const y = layer.y + bounce;
            ctx.shadowBlur = 30;
            ctx.shadowColor = 'rgba(0,0,0,0.5)';
            const grad = ctx.createLinearGradient(x, y, x + layer.w, y);
            grad.addColorStop(0, layer.accent);
            grad.addColorStop(0.5, layer.color);
            grad.addColorStop(1, layer.accent);
            ctx.fillStyle = grad;
            ctx.beginPath();
            ctx.roundRect(x, y, layer.w, layer.h, 20);
            ctx.fill();
            ctx.fillStyle = 'rgba(255,255,255,0.3)';
            ctx.beginPath();
            ctx.roundRect(x, y, layer.w, 15, {tl:20, tr:20, bl:0, br:0});
            ctx.fill();
            if(layer.landed) {
                ctx.fillStyle = 'white';
                for(let i=0; i<10; i++) {
                    ctx.beginPath();
                    ctx.arc(x + (i * (layer.w/10)) + 10, y + 30, 3, 0, Math.PI*2);
                    ctx.fill();
                }
            }
            ctx.restore();
        }

        function drawCandle(x, y, opacity) {
            ctx.save();
            ctx.globalAlpha = opacity;
            ctx.fillStyle = '#fff';
            ctx.shadowBlur = 10;
            ctx.shadowColor = 'white';
            ctx.fillRect(x - 6, y - 50, 12, 50);
            ctx.strokeStyle = '#00d4ff';
            ctx.lineWidth = 2;
            ctx.beginPath();
            ctx.moveTo(x-6, y-40); ctx.lineTo(x+6, y-45);
            ctx.moveTo(x-6, y-20); ctx.lineTo(x+6, y-25);
            ctx.stroke();
            if (opacity >= 1) {
                const fScale = 1 + Math.sin(Date.now() / 100) * 0.1;
                ctx.shadowBlur = 30;
                ctx.shadowColor = '#ffaa00';
                ctx.fillStyle = '#ffcc00';
                ctx.beginPath();
                ctx.ellipse(x, y - 70, 12 * fScale, 18 * fScale, 0, 0, Math.PI * 2);
                ctx.fill();
                ctx.fillStyle = '#fff';
                ctx.beginPath();
                ctx.ellipse(x, y - 65, 5 * fScale, 8 * fScale, 0, 0, Math.PI * 2);
                ctx.fill();
            }
            ctx.restore();
        }

        function animate() {
            ctx.clearRect(0, 0, canvas.width, canvas.height);
            stars.forEach(s => {
                s.opacity += s.speed;
                if(s.opacity > 1 || s.opacity < 0.2) s.speed *= -1;
                ctx.fillStyle = `rgba(255, 255, 255, ${s.opacity})`;
                ctx.beginPath();
                ctx.arc(s.x, s.y, s.size, 0, Math.PI*2);
                ctx.fill();
            });
            let allLanded = true;
            layers.forEach(layer => {
                if (layer.delay > 0) { layer.delay--; allLanded = false; }
                else if (layer.y < layer.targetY) { layer.y += 15; allLanded = false; }
                else { layer.y = layer.targetY; layer.landed = true; }
                drawCakeLayer(layer);
            });
            if (allLanded) {
                if (candleOpacity < 1) { candleOpacity += 0.02; }
                else if (!uiRevealed) {
                    uiRevealed = true;
                    messageDiv.classList.add('show');
                    setTimeout(() => questionBox.style.display = 'flex', 1000);
                }
                drawCandle(canvas.width / 2, layers[2].y, candleOpacity);
                particles.forEach(p => { p.update(); p.draw(); });
            }
            requestAnimationFrame(animate);
        }

        // Ù…Ù†Ø·Ù‚ Ø²Ø± "Ù„Ø£" Ø§Ù„Ù‡Ø§Ø±Ø¨
        let moved = false;
        noBtn.addEventListener('mouseenter', () => {
            // ØªØ­ÙˆÙŠÙ„ Ø§Ù„Ø²Ø± Ø¥Ù„Ù‰ ÙˆØ¶Ø¹ Ù…Ø·Ù„Ù‚ Ø¹Ù†Ø¯ Ø£ÙˆÙ„ Ù„Ù…Ø³Ø© Ù„ÙŠØ¨Ø¯Ø£ ÙÙŠ Ø§Ù„Ù‡Ø±ÙˆØ¨ ÙÙŠ ÙƒÙ„ Ø§Ù„Ø´Ø§Ø´Ø©
            if (!moved) {
                noBtn.style.position = 'fixed';
                moved = true;
            }
            
            // Ø­Ø³Ø§Ø¨ Ø­Ø¯ÙˆØ¯ Ø§Ù„Ø´Ø§Ø´Ø© Ù…Ø¹ ØªØ±Ùƒ Ù…Ø³Ø§ÙØ© Ø£Ù…Ø§Ù†
            const padding = 100;
            const maxX = window.innerWidth - noBtn.offsetWidth - padding;
            const maxY = window.innerHeight - noBtn.offsetHeight - padding;
            
            // ØªÙˆÙ„ÙŠØ¯ Ø¥Ø­Ø¯Ø§Ø«ÙŠØ§Øª Ø¹Ø´ÙˆØ§Ø¦ÙŠØ©
            const randomX = Math.max(padding, Math.random() * maxX);
            const randomY = Math.max(padding, Math.random() * maxY);
            
            noBtn.style.left = randomX + 'px';
            noBtn.style.top = randomY + 'px';
            
            // ØªØºÙŠÙŠØ± Ø§Ù„Ù„ÙˆÙ† Ù‚Ù„ÙŠÙ„Ø§Ù‹ ÙÙŠ ÙƒÙ„ Ù…Ø±Ø© ÙŠÙ‡Ø±Ø¨ ÙÙŠÙ‡Ø§ Ù„Ù…Ø²ÙŠØ¯ Ù…Ù† Ø§Ù„Ù…Ø±Ø­
            noBtn.style.background = `rgba(${Math.random()*255}, ${Math.random()*255}, ${Math.random()*255}, 0.3)`;
        });

        // Ù…Ù†Ø¹ Ø§Ù„Ø¶ØºØ· Ø¹Ù† Ø·Ø±ÙŠÙ‚ Ø§Ù„ÙƒÙŠØ¨ÙˆØ±Ø¯ Ø£Ùˆ Ø£ÙŠ ÙˆØ³ÙŠÙ„Ø© Ø£Ø®Ø±Ù‰ Ù„Ø²Ø± "Ù„Ø£"
        noBtn.addEventListener('click', (e) => {
            e.preventDefault();
            return false;
        });

        yesBtn.addEventListener('click', () => {
            successModal.classList.add('active');
            // Ø¥Ø®ÙØ§Ø¡ Ø²Ø± "Ù„Ø§" Ø§Ù„Ù‡Ø§Ø±Ø¨ Ø¹Ù†Ø¯ Ø§Ù„ÙÙˆØ²
            noBtn.style.display = 'none';
            for(let i=0; i<50; i++) particles.push(new Confetti());
        });

        closeModal.addEventListener('click', () => {
            successModal.classList.remove('active');
        });

        initStars();
        for(let i=0; i<100; i++) particles.push(new Confetti());
        animate();

        window.addEventListener('resize', () => {
            canvas.width = window.innerWidth;
            canvas.height = window.innerHeight;
            stars = [];
            initStars();
        });
    </script>
</body>
